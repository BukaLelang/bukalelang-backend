<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/config.js"></script>
  <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>

</head>
<body>
  <h1><%= title %></h1>
  <h3>Welcome to <%= title %></h3>
  <ul id="messages-area"></ul>
  <form id="form" onsubmit="return false;">
    <input id="new-message" type="text" /><button onclick="sendFunction()">Send</button>
  </form>
  <script>

  var socket = io(API_ENDPOINT);
  function sendFunction() {
    console.log('jalan');
    socket.emit('new message', $('#new-message').val());
    $('#new-message').val('');
  }
  socket.on('chat message', function(msg){
    console.log('dapaet', msg);
    $('#messages-area').append($('<li>').text(msg));
  });
  socket.on('auction-12', function(msg){
    console.log('dapaet', msg.current_price);
    $('#messages-area').append($('<li>').text(msg.current_price));
  });
  </script>
</body>

</html>
